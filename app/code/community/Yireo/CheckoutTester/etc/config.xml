<config>

    <modules>
        <Yireo_CheckoutTester>
            <version>0.1.11</version>
        </Yireo_CheckoutTester>
    </modules>

    <global>
        <blocks>
            <checkouttester>
                <class>Yireo_CheckoutTester_Block</class>
            </checkouttester>
        </blocks>

        <helpers>
            <checkouttester>
                <class>Yireo_CheckoutTester_Helper</class>
            </checkouttester>
        </helpers>

        <models>
            <checkouttester>
                <class>Yireo_CheckoutTester_Model</class>
            </checkouttester>
        </models>
    </global>

    <frontend>
        <routers>
            <checkouttester>
                <use>standard</use>
                <args>
                    <module>Yireo_CheckoutTester</module>
                    <frontName>checkouttester</frontName>
                </args>
            </checkouttester>
        </routers>

        <layout>
            <updates>
                <checkouttester>
                    <file>checkouttester.xml</file>
                </checkouttester>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <checkouttester_addFeed>
                        <class>Yireo_CheckoutTester_Model_Observer_AddFeed</class>
                        <method>execute</method>
                    </checkouttester_addFeed>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>

    <default>
        <checkouttester>
            <settings>
                <order_id>0</order_id>
                <checkout_onepage_controller_success_action>0</checkout_onepage_controller_success_action>
            </settings>
        </checkouttester>
    </default>
</config>
