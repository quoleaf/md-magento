<?xml version="1.0"?> 
<layout>
    <landingpage translate="label">
        <label>MD Landingpage</label>
        <reference name="root">
            <action method="setTemplate"><template>page/md-landingpage.phtml</template></action>
            <action method="setIsHandle"><applied>1</applied></action>
        </reference>
    </landingpage> 

    <default>
        <reference name="header">
            <block type="directory/currency" name="custom_currency_selector" template="currency/currency.phtml"/>
        </reference>
        <remove name="currency" />
    </default>
</layout>